# Dockerfile.nextjs
FROM node:20-alpine AS base

WORKDIR /app

# Install dependencies
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm
RUN pnpm install

# Copy source code
COPY . .

# Build for production
RUN pnpm build

# Development mode
EXPOSE 3000
ENV PORT 3000
ENV HOSTNAME "0.0.0.0"

# Use development command by default
CMD ["pnpm", "dev"]